{
	"extends": "../../tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"module": "esnext",
		"noEmit": false,
		"outDir": "dist",
		"target": "es2017",
		"isolatedModules": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@graphql/*": ["src/graphql/*"],
			"@lib/*": ["src/lib/*"],
			"@styles/*": ["src/styles/*"],
			"@svgs/*": ["src/svgs/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"exclude": ["dist", ".next", "out", "next.config.ts"],
	"include": ["next-env.d.ts", "**/*.js", "**/*.ts", "**/*.tsx"]
}
