{
	"extends": "../../tsconfig",

	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"module": "esnext",
		"noEmit": false,
		"outDir": "dist",
		"target": "es2017",
		"isolatedModules": true,
		"paths": {
			"@components/*": ["src/components/*"],
			"@containers/*": ["src/containers/*"],
			"@gql/*": ["src/gql/*"],
			"@data/*": ["src/data/*"],
			"@lib/*": ["src/lib/*"],
			"@styles/*": ["src/styles/*"],
			"@svgs/*": ["src/svgs/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"exclude": ["dist", ".next", "out", "next.config.ts"],
	"include": ["next-env.d.ts", "src", "src/**/*.json"]
}
