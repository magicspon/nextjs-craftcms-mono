{
	"extends": "../../tsconfig",

	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"module": "esnext",
		"noEmit": false,
		"outDir": "dist",
		"target": "es2017",
		"isolatedModules": true,
		"paths": {
			"@ui": ["../ui/src"],
			"@ui/*": ["../ui/src/*"]
		}
	},
	"exclude": ["dist", ".next", "out", "next.config.ts"],
	"include": ["index.d.ts", "src", "src/**/*.json"]
}
