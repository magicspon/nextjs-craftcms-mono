{
	"version": "0.0.1",
	"name": "@spon/workspace",
	"private": true,
	"author": {
		"email": "hello@spon.io",
		"name": "Dave Stockley",
		"url": "https://spon.io"
	},
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com:magicspon/nextjs-craftcms-mono.git"
	},
	"license": "MIT",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "lerna run dev --scope=@spon/frontend --stream",
		"build": "lerna run --parallel build",
		"app:build": "lerna run --scope=@spon/frontend build",
		"app:start": "lerna run --scope=@spon/frontend start",
		"lint": "lerna run --scope=@spon/frontend lint",
		"pretify": "prettier --write .",
		"prepare": "husky install",
		"release": "lerna version --conventional-commits"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@commitlint/config-lerna-scopes": "^12.1.4",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"babel-jest": "^27.0.6",
		"babel-plugin-module-resolver": "4.1.0",
		"commitlint": "^12.1.4",
		"eslint": "^7.29.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-import-resolver-typescript": "^2.4.0",
		"eslint-plugin-compat": "^3.9.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-react-hooks": "^4.1.2",
		"husky": "^6.0.0",
		"jest": "^27.0.6",
		"lerna": "^4.0.0",
		"lerna-changelog": "^1.0.1",
		"prettier": "^2.3.2",
		"tsconfig-paths": "3.9.0",
		"typescript": "4.3.4"
	},
	"engines": {
		"node": ">=12.0.0",
		"yarn": "^1.5"
	},
	"quokka": {
		"babel": {
			"env": "test",
			"polyfill": false
		},
		"installPackageCommand": "yarn add {packageName}",
		"env": {
			"params": {
				"env": "NODE_ENV=test"
			}
		}
	},
	"lint-staged": {
		"*.{ts,tsx,json,js,jsx}": [
			"eslint"
		],
		"**/*.{ts,tsx,json,js,jsx,css}": [
			"prettier --write"
		],
		"*.js": "eslint --cache --fix",
		"*.css": "stylelint --fix",
		"*.--write": "prettier --write"
	},
	"volta": {
		"node": "14.16.0",
		"yarn": "1.22.10"
	}
}
